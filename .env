# ============================================================================
# CONFIGURATION KIVENDTOUT - ENVIRONNEMENT DE DÃ‰VELOPPEMENT
# ============================================================================
# Copier ce fichier en .env et adapter les valeurs

# ============================================================================
# POSTGRESQL
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=kivendtout

# ============================================================================
# MONGODB
# ============================================================================
MONGO_URI=mongodb://admin:admin@localhost:27017/?authSource=admin
MONGO_DB=kivendtout
MONGO_COLLECTION=events

# ============================================================================
# MINIO (S3)
# ============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET_BRONZE=bronze
MINIO_BUCKET_SILVER=silver
MINIO_BUCKET_GOLD=gold

# ============================================================================
# KAFKA
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_TOPIC_USER_EVENTS=user-events
KAFKA_TOPIC_PAYMENTS=payments
KAFKA_TOPIC_ORDERS=orders
KAFKA_TOPIC_FRAUD_ALERTS=fraud-alerts

# ============================================================================
# AIRFLOW
# ============================================================================
AIRFLOW_UID=50000
AIRFLOW_GID=0
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://postgres:postgres@postgres:5432/airflow
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__WEBSERVER__SECRET_KEY=
AIRFLOW_WWW_USER_USERNAME=airflow
AIRFLOW_WWW_USER_PASSWORD=airflow

# ============================================================================
# FASTAPI
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_SECRET_KEY=your-secret-key-change-me-in-production
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# MONITORING
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================================================
# MACHINE LEARNING
# ============================================================================
ML_MODEL_PATH=./ml/models
ML_DATASET_PATH=./ml/data

# ============================================================================
# ENVIRONNEMENT
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
